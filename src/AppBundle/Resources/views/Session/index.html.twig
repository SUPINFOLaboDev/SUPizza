{% extends '::base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1>Liste des sessions</h1>
            <p>
                <a href="{{ path('session_new') }}" class="btn btn-lg btn-primary">
                    Créer une nouvelle session
                </a>
            </p>
        </div>
    </div>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for session in sessions %}
                    <tr>
                        <td>
                            <a href="{{ path('session_show', { 'id': session.id }) }}">
                                {{ session.id }}
                            </a>
                        </td>
                        <td>
                            {{ session.startAt|date('d/m/Y H:i:s') }}
                        </td>
                        <td>
                            {{ session.endAt|date('d/m/Y H:i:s') }}
                        </td>
                        <td>
                            <div class="btn-group btn-group-xs" role="group">
                                <a href="{{ path('session_show', { 'id': session.id }) }}" class="btn btn-default">Afficher</a>
                                <a href="{{ path('session_edit', { 'id': session.id }) }}" class="btn btn-default">Éditer</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
