{% extends '::base.html.twig' %}

{% block title %}Session #{{ session.id }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1>Session #{{ session.id }}</h1>
            <p>
                <a href="{{ path('session_edit', { 'id': session.id }) }}" class="btn btn-primary">
                    Éditer
                </a>
                <a href="{{ path('session') }}" class="btn btn-default">
                    Retourner à la liste
                </a>
            </p>
        </div>
    </div>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ session.id }}</td>
                    </tr>
                    <tr>
                        <th>Date de début</th>
                        <td>{{ session.startAt|date('d/m/Y H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin</th>
                        <td>{{ session.endAt|date('d/m/Y H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
